{
  "coverage": {
    "statements": 80,
    "branches": 75,
    "functions": 80,
    "lines": 80,
    "threshold": {
      "high": 90,
      "medium": 70,
      "low": 50
    }
  },
  "codeQuality": {
    "eslint": {
      "maxWarnings": 5,
      "maxErrors": 0
    },
    "prettier": {
      "enforce": true
    },
    "typescript": {
      "noErrors": true
    }
  },
  "performance": {
    "bundleSize": {
      "max": "2MB",
      "warning": "1.5MB"
    },
    "loadTime": {
      "max": 3000,
      "warning": 2000
    },
    "memory": {
      "max": "50MB",
      "warning": "30MB"
    }
  },
  "testing": {
    "minTests": 50,
    "maxTestDuration": 10000,
    "flakyTestThreshold": 3
  },
  "security": {
    "vulnerabilityThreshold": "medium",
    "auditPassRequired": true
  },
  "documentation": {
    "apiCoverage": 80,
    "readmeExists": true,
    "changelogExists": true
  }
}